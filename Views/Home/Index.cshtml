@{
    ViewData["Title"] = "Home Page";
}
@model CategoryVM

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <form asp-controller="Home" asp-action="CreateNewCategory" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-4">
                        <label for="Name">اسم الماركة</label>
                        <input asp-for="Category.Name" id="name" class="form-control " />
                    </div>
                    <div class="row">

                    <div class="col-3">
                        <label for="Image">صورة الماركة</label>
                        
                        <div id="demo1">
                            
                            <div>
                                <div class="tower-file">
                                    <input type="file" name="file" id="demoInput1" value="" class="form-control" />
                                    <label for="demoInput1" class="tower-file-button">
                                        Select a File
                                    </label>
                                </div>
                            </div>

                       
                        </div>
                    </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label for="Active">نشط</label>
                            <input asp-for="Category.Active" id="Active" class="form-check form-check-input" checked />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-success">حفظ</button>
                        </div>
                    </div>
                    </div>
            </form>
        </div>
    </div>
</div>
<div class="container m-4">
    <div class="row">
        <div class="col">

            <form asp-action="Search" method="post" >
                <div class="row">
        <div class="col-3">

            <input type="text" name="category" class="form-control" />
        </div>
        <div class="col-3">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass text-white"></i> بحث </button>
        </div>
</div>
            </form>
        </div>
    </div>
</div>
<div class="container m-4">
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered text-center table-hover align-middle shadow rounded">
                <thead class="table-success">
                    <tr>
                        <th>الصورة</th>
                        <th>الاسم</th>
                        <th>نشط</th>
                        <th colspan="2">الاجراء</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var cat in Model.Categories)
                    {
                        <tr>
                            <td><img src="~/Images/@cat.Image" width="90px"/></td>
                            <td>@cat.Name</td>
                            <td><input asp-for="@cat.Active" checked="@cat.Active" disabled /></td>
                            <td><a asp-action="Edit" asp-route-id="@cat.Id"><i class="fa-solid fa-pen-to-square text-warning"></i></a></td>
                            <td><a asp-action="Delete" asp-route-id="@cat.Id"><i class="fa-solid fa-trash text-danger"></i></a>   </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/tower-file-input.js"></script>
    <script>
        $('#demoInput1').fileInput();
    </script>
                    }