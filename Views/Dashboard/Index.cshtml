                                                <tr>
                                                    <td><img src="~/Images/@cat.Image" width="90px" /></td>
                                                    <td>@cat.Name</td>
                                                    <td><input asp-for="@cat.Active" checked="@cat.Active" disabled /></td>
                                                    <td><a asp-action="EditTradeMark" asp-route-id="@cat.Id"><i class="fa-solid fa-pen-to-square text-warning"></i></a></td>
                                                    
                                                    <td><a asp-action="DeleteTradeMark" asp-route-id="@cat.Id"><i class="fa-solid fa-trash text-danger"></i></a>   </td>
