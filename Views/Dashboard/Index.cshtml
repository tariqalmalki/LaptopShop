                                            <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                                                <i class="ki-duotone ki-cross fs-1"><span class="path1"></span><span class="path2"></span></i>
                                            </div>
                                            <!--end::Close-->
                                        </div>

                                        <div class="modal-body">
                                            <form asp-controller="Dashboard" asp-action="CreateNewTradeMark" method="post" enctype="multipart/form-data">
                                                <div class="row m-3">
                                                    <div class="col-12">
                                                        <label for="Name">اسم الماركة</label>
                                                        <input asp-for="Category.Name" id="name" class="form-control " />
                                                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                                                    </div>
                                                    <div class="row text-center d-flex justify-content-center m-3">

                                                        <div class="col-4">
                                                            <label for="Image">صورة الماركة</label>

                                                            <div id="demo1">

                                                                <div>
                                                                    <div class="tower-file">
                                                                        <input asp-for=Category.Image type="file" name="file" id="demoInput1" value="" class="form-control" required />
                                                                        <label for="demoInput1" class="tower-file-button">
                                                                            Select a File
                                                                        </label>
                                                                    </div>
                                                                </div>


                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row text-center m-3">
                                                        <div class="col">
                                                            <label for="Active">نشط</label>
                                                            <input asp-for="Category.Active" id="Active" class="form-check-input" checked />
                                                        </div>
                                                    </div>
                                                    <div class="row m-3 text-center">
                                                        <div class="col">
                                                            <button type="submit" class="btn btn-success">حفظ</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <hr />
                                      

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
